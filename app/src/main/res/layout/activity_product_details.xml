    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/product_img1"
        android:gravity="center"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Description"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/product_name"
        android:gravity="center"
        android:textColor="@color/colorAccentLight"/>

    <TextView
        android:id="@+id/product_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_desc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Category"
        android:textColor="@color/colorAccentLight"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/product_rat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_cat"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Rating"
        android:textColor="@color/colorAccentLight"
        android:textSize="25dp" />


    <Button
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_below="@+id/product_desc"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/product_cat"
        android:background="@drawable/ic_share"
        android:backgroundTint="@color/colorAccent" />

    <ImageView
        android:id="@+id/wishlist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/product_rat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="175dp"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_wishlist" />

